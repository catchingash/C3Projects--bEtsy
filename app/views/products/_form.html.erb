<%= form_for @seller ? [@seller, @product] : @product, html: { class: "form" } do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control", required: "required", placeholder: "in cents" %>
  </div>
  <div class="form-group">
    <%= f.label :stock %>
    <%= f.text_field :stock, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :photo_url %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-default"%>
<% end %>
