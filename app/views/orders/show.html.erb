
<h2>Customer Info</h2>
<p>Name: <%= @order.buyer_name %></p>
<p>Address: <%= @order.buyer_address %></p>
<p>Credit Card: xxxx <%= @order.buyer_card_short %></p>
<p>Credit Cart Expiration: <%= @order.buyer_card_expiration %></p>

<table class="table table-striped table-condensed">
  <tr>
    <th>Quantity</th>
    <th>Product</th>
    <th>Price</th>
    <th>Status</th>
    <th>Options</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.quantity_ordered %></td>
      <td><%= item.product.name %></td>
      <td><%= display_dollars(item.total_item_price) %></td>
      <td><%= @order.status %></td>
      <td>
        <!-- # FIXME: these buttons don't do anything see bug https://trello.com/c/iPWevY4r -->
        <%= link_to "Ship", root_path, method: :get, class: "btn btn-default" %>
        <%= link_to "Cancel", root_path, method: :get, class: "btn btn-warning" %>
      </td>
    </tr>
  <% end %>
  <tr>
    <th colspan="3">Order Total</th>
    <th colspan="2"><%= display_dollars(@order.total_order_price(@seller.id)) %></th>
  </tr>
</table>
