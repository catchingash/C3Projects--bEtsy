<h2>SHIPPING INFO</h2>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-condensed table-hover">
      <tr>
        <th>Provider</th>
        <th>Price</th>
        <th>Estimated Arrival</th>
        <th></th>
      </tr>
      <% @response.each do |option| %>
        <tr>
          <%= form_for @order, url: update_shipping_path, html: { role: "form", method: :patch } do |f| %>
            <td><%= option[0] %></td>
            <td><%= display_dollars(option[1]) %></td>
            <td><%= option[2] || "N/A" %></td>
            <%= f.hidden_field :shipping_type, value: option[0] %>
            <%= f.hidden_field :shipping_price, value: option[1] %>
            <%= f.hidden_field :shipping_estimate, value: option[2] %>
            <td><%= submit_tag("Select", class: "btn btn-default") %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= link_to "<< Ship to a different location", checkout_path %>
